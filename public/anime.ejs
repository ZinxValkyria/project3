<body><!-- Include jQuery library (if not already included) -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <!-- Include jQuery library (if not already included) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script id="result">
  document.addEventListener('DOMContentLoaded', function () {
    document.getElementById('animeForm').addEventListener('submit', function (event) {
      event.preventDefault();
      fetch('/api/anime')
        .then(response => response.json())
        .then(data => {
          const animeInfoContainer = document.getElementById('animeInfo');
          animeInfoContainer.innerHTML = '<h2>Studio Ghibli Films</h2>';

          data.forEach(film => {
            animeInfoContainer.innerHTML += `
              <div>
                <h3>${film.title}</h3>
                <p>Director: ${film.director}</p>
                <p>Producer: ${film.producer}</p>
                <p>Release Date: ${film.release_date}</p>
                <p>Description: ${film.description}</p>
              </div>
            `;
          });
        })
        .catch(error => {
          console.error('Error fetching anime data:', error.message);
          document.getElementById('animeInfo').innerHTML = '<p>Failed to fetch anime data.</p>';
        });
    });
  });
</script>

<!-- Your HTML form for submitting the request -->
<form id="animeForm">
  <button type="submit">Get Anime Info</button>
</form>

<!-- Display anime info here -->
<div id="animeInfo"></div>

